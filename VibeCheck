<script>
    const API_KEY = "AIzaSyDZCOlfxj6iOMLD9ZsH_a0fKScKnNBP6RA";

    function handleSearch(event) {
        if (event.key === 'Enter') {
            const city = event.target.value.trim();
            if (city !== "") {
                fetchEchteVibes(city);
                event.target.blur(); 
            }
        }
    }

    async function fetchEchteVibes(city) {
        const feed = document.getElementById('feedContainer');
        const pill = document.getElementById('locationPill');

        pill.innerHTML = `üìç Suche in ${city}...`;
        feed.innerHTML = `<h3 style="text-align:center; color: #64748b; margin-top: 50px;">Lade echte Daten aus ${city}... ‚è≥</h3>`;

        try {
            const url = `https://generativelanguage.googleapis.com/v1beta/models/gemini-1.5-flash:generateContent?key=${API_KEY}`;
            const prompt = `Du bist das Backend der App Vibe-Check. Nenne 3 echte, existierende und angesagte Caf√©s in "${city}". Antworte AUSSCHLIESSLICH in diesem JSON Format, keine anderen Zeichen:
            [{"user":"@local","time":"Gerade eben","place":"Name","review":"Bewertung des Vibes","highlight":"‚òÅÔ∏è Cozy","tags":["Tag1","Tag2"]}]`;

            const response = await fetch(url, {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ contents: [{ parts: [{ text: prompt }] }] })
            });

            const data = await response.json();
            
            // Wenn die API immer noch meckert, werfen wir den echten Fehler auf den Bildschirm
            if (data.error) throw new Error(data.error.message);

            let rawText = data.candidates[0].content.parts[0].text;
            rawText = rawText.replace(/```json/g, '').replace(/```/g, '').trim();
            const spots = JSON.parse(rawText);

            pill.innerHTML = `üìç ${city}`;
            feed.innerHTML = `<h2>Live Spots in ${city}</h2>`;

            spots.forEach((spot, index) => {
                const tagsHtml = spot.tags.map(tag => `<span class="tag">${tag}</span>`).join('');
                const hue = Math.floor(Math.random() * 360);

                feed.innerHTML += `
                    <div class="feed-card" style="animation-delay: ${index * 0.15}s">
                        <div class="user-header">
                            <div class="avatar" style="background: linear-gradient(135deg, hsl(${hue}, 80%, 85%), hsl(${hue + 40}, 80%, 85%));"></div>
                            <div class="user-info">
                                <span class="username">${spot.user}</span>
                                <span class="time-ago">${spot.time}</span>
                            </div>
                        </div>
                        <div class="place-name">${spot.place}</div>
                        <div class="review-text">${spot.review}</div>
                        <div class="tag-list">
                            <span class="tag highlight">${spot.highlight}</span>
                            ${tagsHtml}
                        </div>
                    </div>
                `;
            });

        } catch (error) {
            feed.innerHTML = `
                <div style="text-align: center; margin-top: 40px; background: white; padding: 20px; border-radius: 20px;">
                    <h3 style="color: #ef4444;">Echter API Fehler:</h3>
                    <p style="color: #64748b; font-size: 0.8rem; word-wrap: break-word;">${error.message}</p>
                </div>
            `;
        }
    }
</script>

